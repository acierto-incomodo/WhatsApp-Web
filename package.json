{
  "name": "whatsapp-web",
  "version": "1.0.2",
  "description": "Cliente de WhatsApp Web hecho con Electron",
  "main": "main.js",
  "author": "StormGamesStudios",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --linux deb"
  },
  "build": {
    "appId": "com.stormgamesstudios.whatsapp",
    "productName": "WhatsApp Web",
    "directories": {
      "output": "release"
    },
    "extraResources": [
      {
        "from": "icons/icon.ico",
        "to": "icons/icon.ico",
        "filter": "**/*"
      },
      {
        "from": "icons/icon.ico",
        "to": "icon.ico",
        "filter": "**/*"
      }
    ],
    "files": [
      "main.js",
      "preload.js",
      "package.json",
      "icons/icon.png"
    ],
    "linux": {
      "target": ["deb"],
      "category": "Network",
      "icon": "icons",
      "maintainer": "StormGamesStudios <meliodas.aitor@gmail.com>",
      "synopsis": "Cliente no oficial de WhatsApp Web",
      "description": "Aplicación ligera basada en Electron que abre WhatsApp Web y guarda tus datos de sesión localmente."
    }
  },
  "devDependencies": {
    "electron": "^39.1.0",
    "electron-builder": "^26.0.12"
  }
}
